  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'mysql2'
  gem 'debugger'
  gem "rspec-rails"
  gem "shoulda-matchers"
  gem "factory_girl_rails", "~> 4.0"
end

# Front End
