$(function($) {
  var spinner = "<%= asset_path('spinner-light.gif') %>";

  $.fn.spin = function() {
    var parent;

    this.wrap("<div class='spin-wrapper'>");

    parent = $(this.parents()[0]);
    parent.append('<img src="'+spinner+'" width="32" height="32"/>');
    parent.append("<div class='clearfix'/>");
  };
}($));
